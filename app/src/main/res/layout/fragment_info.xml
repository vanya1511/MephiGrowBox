<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B7FAB6">

    <LinearLayout
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <View
                android:id="@+id/rectangle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/info_rectangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/rectangle"
                android:layout_alignTop="@+id/rectangle"
                android:layout_alignEnd="@+id/rectangle"
                android:layout_alignBottom="@+id/rectangle"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Информация"
                android:textColor="#fff"
                android:textSize="26sp" />

        </RelativeLayout>

        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_hum"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Уровень влажности: "
                />
            <TextView
                android:id="@+id/info_temp"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Температура: "
                />
            <TextView
                android:id="@+id/info_light"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Уровень освещенности: "
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cостояние растения: "
                />
            <TextView
                android:id="@+id/info_plant"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Растение:"/>

            <ImageView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/plant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">
                <Button
                    android:id="@+id/choose_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/humidity_rectangle"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="  Выбор растения  "
                    android:textColor="#fff"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/help_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/humidity_rectangle"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:text="ИНФО"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>